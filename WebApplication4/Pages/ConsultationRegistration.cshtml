@page
@model WebApplication4.Pages.ConsultationRegistrationModel
@{
    ViewData["Title"] = "Registration for a consultation";
}

<h1>@ViewData["Title"]</h1>

<form method="post">

    <div class="form-group">
        <label name="FullName" asp-for="FullName">Full Name:</label>
        <input name="FullName" asp-for="FullName" class="form-control" required />
    </div>

    <div class="form-group">
        <label name="Email" asp-for="Email">Email: </label>
        <input name="Email" asp-for="Email" type="email" class="form-control" required />
    </div>

    <div class="form-group">
        <label name="DesiredDate" asp-for="DesiredDate">DesiredDate: </label>
        <input name="DesiredDate" asp-for="DesiredDate" type="date" class="form-control" required />
        @Html.ValidationSummary()
    </div>

    <div class="form-SelectedProduct">
        <label name="FullName" asp-for="SelectedProduct">Product:</label>
        <select name="SelectedProduct" asp-for="SelectedProduct" class="form-control" required>
            <option value="">Choose Product</option>
            @for(int i = 0;i < Model.Products.Count; i++)
            {
                <option value="@Model.Products[i]">@Model.Products[i]</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
